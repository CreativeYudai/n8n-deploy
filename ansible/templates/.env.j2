# Environment variables for n8n deployment
N8N_BASIC_AUTH_USER={{ n8n_basic_auth_user }}
N8N_BASIC_AUTH_PASSWORD={{ n8n_basic_auth_password }}
N8N_HOST={{ domain_name }}
N8N_PROTOCOL={{ n8n_protocol }}
N8N_EDITOR_BASE_URL={{ n8n_protocol }}://{{ domain_name }}
WEBHOOK_URL={{ n8n_protocol }}://{{ domain_name }}/
GENERIC_TIMEZONE={{ n8n_timezone }}

# WebSocket and CORS Configuration
N8N_CORS_ORIGINS={{ n8n_protocol }}://{{ domain_name }}
ALLOWED_ORIGINS={{ n8n_protocol }}://{{ domain_name }}
N8N_SECURE_COOKIE=true

# n8n Performance and Security Settings
N8N_RUNNERS_ENABLED=true
N8N_BLOCK_ENV_ACCESS_IN_NODE=false
N8N_GIT_NODE_DISABLE_BARE_REPOS=true
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true

# Database Configuration
POSTGRES_DB={{ postgres_db }}
POSTGRES_USER={{ postgres_user }}
POSTGRES_PASSWORD={{ postgres_password }}
POSTGRES_NON_ROOT_USER={{ postgres_user }}
POSTGRES_NON_ROOT_PASSWORD={{ postgres_password }}

# Security Keys
N8N_ENCRYPTION_KEY={{ n8n_encryption_key }}
N8N_JWT_SECRET={{ n8n_jwt_secret }}

# SSL Certificate Email for Let's Encrypt
CERTBOT_EMAIL={{ certbot_email }}

# Domain for SSL certificate
DOMAIN={{ domain_name }}